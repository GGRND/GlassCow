<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginTop="@dimen/margin_header_top"
        android:gravity="start"
        android:textSize="@dimen/text_size_top" />

    <TextView
        android:id="@+id/CowID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_header_top"
        android:gravity="end"
        android:textSize="@dimen/text_size_top" />

    <TextView
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:textSize="@dimen/text_size_footer" />
    
    
    <LinearLayout
        android:layout_width="624dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_right"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginTop="@dimen/list_start"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_element_height" >

            <ImageView
                android:id="@+id/c1img"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:layout_centerVertical="true"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ring_white" />

            <TextView
                android:id="@+id/c1txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_left"
                android:layout_toEndOf="@+id/c1img"
                android:textSize="@dimen/text_size_label" />

            <TextView
                android:id="@+id/c1txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_right"
                android:textSize="@dimen/text_size_value" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/divider_size"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:background="@android:color/darker_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_element_height" >

            <ImageView
                android:id="@+id/c2img"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:layout_centerVertical="true"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ring_white" />

            <TextView
                android:id="@+id/c2txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_left"
                android:layout_toEndOf="@+id/c2img"
                android:textSize="@dimen/text_size_label" />

            <TextView
                android:id="@+id/c2txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_right"
                android:textSize="@dimen/text_size_value" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/divider_size"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:background="@android:color/darker_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_element_height" >

            <ImageView
                android:id="@+id/c3img"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:layout_centerVertical="true"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ring_white" />

            <TextView
                android:id="@+id/c3txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_left"
                android:layout_toEndOf="@+id/c3img"
                android:textSize="@dimen/text_size_label" />

            <TextView
                android:id="@+id/c3txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_right"
                android:textSize="@dimen/text_size_value" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/divider_size"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:background="@android:color/darker_gray" />
        </RelativeLayout>
    </LinearLayout>

    
</RelativeLayout><!-- From: file:/Users/morten/Programming/GlassCow/app/src/main/res/layout/standard.xml -->