<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginTop="@dimen/margin_header_top"
        android:gravity="start"
        android:textSize="@dimen/text_size_top" />

    <TextView
        android:id="@+id/CowID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_header_top"
        android:gravity="end"
        android:textSize="@dimen/text_size_top" />

    <TextView
        android:id="@+id/EventText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginEnd="@dimen/margin_right"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginTop="@dimen/list_start"
        android:gravity="start"
        android:textSize="@dimen/text_size_label" />

</RelativeLayout><!-- From: file:/Users/morten/Programming/GlassCow/app/src/main/res/layout/new_event.xml -->