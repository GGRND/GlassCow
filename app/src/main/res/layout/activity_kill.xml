<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aflivet"
        android:layout_marginLeft="10dp"
        android:textSize="35dp"/>

    <TextView
        android:id="@+id/CowText_killCow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cow: "
        android:textSize="35dp"
        android:paddingLeft="10dp"
        android:layout_toLeftOf="@+id/CowID_killCow"
        />
    <TextView
        android:id="@+id/CowID_killCow"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:layout_alignParentRight="true"
        />

    <RelativeLayout
        android:id="@+id/date_text_killCow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CowText_killCow"
        android:layout_alignParentRight="true"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/date_killCow"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Date: "
            android:layout_toLeftOf="@id/date_killCow"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/destruktion_killCow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_text_killCow"
        android:layout_alignParentRight="true"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="25dp"
            android:text="Destruktion:"
            android:layout_toLeftOf="@+id/destruktion_id_killCow"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/destruktion_id_killCow"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:text="71930"
            android:textSize="25dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/first_description_killCow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_description_killCow"
        android:textSize="25dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/CowText_killCow"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/second_description_killCow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/second_description_killCow"
        android:textSize="25dp"
        android:layout_below="@+id/destruktion_killCow"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>
</RelativeLayout>